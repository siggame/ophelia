{
  "name": "webserver",
  "version": "0.0.0",
  "private": true,
  "scripts": {
    "start": "node ./server/bin/www",
    "debug": "concurrently \"npm run server-debug\" \"cd client && npm start\" \"npm run selenium\"",
    "test": "npm run nightwatch",
    "server-debug": "cd server && nodemon ./bin/www",
    "setup": "npm install && npm run setup:client  && npm run setup:server && npm run nightwatch_install",
    "setup:client": "cd client && npm install && cd ..",
    "setup:server": "cd server && npm install && cd ..",
    "clean": "npm run clean:client && npm run clean:server && npm run clean:misc",
    "clean:client": "rimraf client/node_modules client/build",
    "clean:server": "rimraf server/node_modules",
    "clean:misc": "rimraf node_modules/",
    "nightwatch_install": "npm install nightwatch --save-dev && npm install selenium-standalone --save-dev && ./node_modules/.bin/selenium-standalone install",
    "nightwatch": "./node_modules/.bin/nightwatch",
    "selenium": "./node_modules/.bin/selenium-standalone start"
  },
  "devDependencies": {
    "babel-eslint": "^8.2.1",
    "concurrently": "^3.5.0",
    "eslint": "^4.7.1",
    "eslint-config-react-app": "^2.1.0",
    "eslint-config-standard": "^10.2.1",
    "eslint-config-standard-jsx": "^4.0.2",
    "eslint-plugin-flowtype": "^2.43.0",
    "eslint-plugin-import": "^2.8.0",
    "eslint-plugin-jsx-a11y": "^6.0.3",
    "eslint-plugin-node": "^5.2.1",
    "eslint-plugin-promise": "^3.5.0",
    "eslint-plugin-react": "^7.3.0",
    "eslint-plugin-standard": "^3.0.1",
    "nodemon": "^1.12.1",
    "standard": "^11.0.0"
  },
  "dependencies": {
    "react-paginate": "^5.1.0"
  },
  "standard": {
    "parser": "babel-eslint",
    "nightwatch": "^0.9.20",
    "nodemon": "^1.12.1",
    "rimraf": "^2.6.2",
    "selenium-standalone": "^6.13.0"
  }
}
